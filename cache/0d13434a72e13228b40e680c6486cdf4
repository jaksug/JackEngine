ul";s:32:"Sejarah SMK Negeri 1 Gunungputri";s:3:"url";s:33:"sejarah-smk-negeri-1-gunung-putri";s:6:"readed";s:3:"349";s:11:"kategori_id";s:1:"3";s:4:"name";s:6:"profil";s:4:"nama";s:18:"SMKN 1 Gunungputri";s:4:"aura";s:24:"media/profil/pp_2783.png";s:7:"xp_nama";s:5:"skiel";}}